<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textStyle="bold"
        android:text="@string/authing_privacy_dialog_title"
        android:textColor="@color/authing_title_color"
        android:textSize="@dimen/authing_text_large_size"/>

    <TextView
        android:id="@+id/content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="@dimen/authing_text_small_size"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/agree_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="180dp"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:text="@string/authing_privacy_dialog_confirm"
        android:background="@drawable/authing_button_background"
        android:textColor="#FFFFFFFF"
        android:textSize="@dimen/authing_text_large_size"
        android:textAppearance="@android:style/Widget.TextView"
        android:gravity="center"
        style="?android:attr/borderlessButtonStyle" />


</LinearLayout>