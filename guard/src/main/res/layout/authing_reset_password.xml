<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/authing_form_start_end_margin"
    android:paddingEnd="@dimen/authing_form_start_end_margin">

    <cn.authing.guard.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/authing_title_layout_height"
        app:showBackIcon="true"
        app:showTitleText="true"
        app:titleText="@string/authing_reset_password"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/authing_input_phone_or_email_and_code"
        android:textColor="@color/authing_text_gray"
        android:textSize="@dimen/authing_text_middle_size"
        android:layout_gravity="center" />

    <cn.authing.guard.AccountEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:hint="@string/authing_phone_or_email_hint"
        app:leftIconDrawable="@drawable/ic_authing_user"
        app:errorEnabled="true"
        app:inputHeight="@dimen/authing_edit_text_height"
        app:errorHeight="@dimen/authing_form_top_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <cn.authing.guard.VerifyCodeEditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            app:leftIconDrawable="@drawable/ic_authing_shield_check"
            app:errorEnabled="true"
            app:inputHeight="@dimen/authing_edit_text_height"
            app:errorHeight="@dimen/authing_form_top_margin"/>
        <cn.authing.guard.GetVerifyCodeButton
            android:layout_width="112dp"
            android:layout_height="@dimen/authing_edit_text_height"
            android:layout_marginStart="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textAppearance="@android:style/Widget.TextView"
            android:gravity="center"
            android:layout_gravity="top"
            android:stateListAnimator="@null"
            app:verifyCodeType="none"
            app:verifyAuthType="resetPassword"/>
    </LinearLayout>

    <cn.authing.guard.PasswordEditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        app:leftIconDrawable="@drawable/ic_authing_password"
        app:clearAllEnabled="false"
        app:errorEnabled="false"
        app:inputHeight="@dimen/authing_edit_text_height"
        app:errorHeight="@dimen/authing_form_top_margin"/>

    <cn.authing.guard.ErrorTextView
        android:id="@+id/tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="24dp"
        android:textColor="@color/authing_error" />

    <cn.authing.guard.ResetPasswordButton
        android:id="@+id/btn_reset"
        android:layout_width="match_parent"
        android:layout_height="@dimen/authing_button_height"
        android:background="@drawable/authing_button_background"
        android:textColor="#FFF"
        android:text="@string/authing_confirm"
        android:textAppearance="@android:style/Widget.TextView"
        android:gravity="center"
        style="?android:attr/borderlessButtonStyle"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:minHeight="16dp"
        android:layout_weight="1"/>

    <include layout="@layout/authing_powered_by" />

</LinearLayout>