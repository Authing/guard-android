<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/authing_form_start_end_margin"
    android:paddingEnd="@dimen/authing_form_start_end_margin">

    <cn.authing.guard.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/authing_title_layout_height"
        app:showBackIcon="true"
        app:showTitleText="true"
        app:titleText="@string/authing_bind_mfa" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/authing_margin_80"
        android:scaleType="centerInside"
        android:src="@mipmap/authing_mfa_bind_tip" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/authing_margin_16"
        android:gravity="center"
        android:text="@string/authing_bind_phone_before_tip"
        android:textColor="@color/authing_text_gray"
        android:textSize="@dimen/authing_text_middle_size" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="16dp" />

    <cn.authing.guard.mfa.GoMFABindButton
        android:layout_width="match_parent"
        android:layout_height="@dimen/authing_button_height"
        android:layout_marginStart="74dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="@dimen/authing_margin_16"
        android:background="@drawable/authing_button_background"
        app:currentMfaBindType="sms" />

    <cn.authing.guard.mfa.GoOtherMFAVerifyButton
        android:layout_width="match_parent"
        android:layout_height="@dimen/authing_button_height"
        android:layout_marginStart="74dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="@dimen/authing_margin_40"
        android:background="@drawable/authing_button_background_gray"
        android:gravity="center"
        android:text="@string/authing_other_mfa"
        android:textColor="@color/authing_text_black"
        android:textSize="@dimen/authing_text_large_size"
        app:currentMfaVerifyType="sms" />

    <include layout="@layout/authing_powered_by" />

</LinearLayout>