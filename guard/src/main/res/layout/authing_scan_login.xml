<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/authing_form_start_end_margin"
    android:paddingEnd="@dimen/authing_form_start_end_margin">

    <cn.authing.guard.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/authing_title_layout_height"
        app:showBackIcon="true"
        app:showTitleText="true"
        app:titleText="@string/authing_push_login_confirm" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_authing_push_login" />

    <TextView
        android:id="@+id/qr_login_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/authing_form_top_margin"
        android:gravity="center"
        android:text="@string/authing_push_login_confirm_tip"
        android:textColor="@color/authing_text_gray"
        android:textSize="@dimen/authing_text_middle_size" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="16dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/authing_button_height"
        android:layout_marginBottom="16dp"
        android:background="@drawable/authing_button_background"
        android:gravity="center"
        android:text="@string/authing_push_confirm_login"
        android:textAppearance="@android:style/Widget.TextView"
        android:textColor="@color/authing_white"
        android:textSize="@dimen/authing_text_large_size" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/authing_button_height"
        android:layout_marginBottom="40dp"
        android:background="@drawable/authing_button_background_gray"
        android:gravity="center"
        android:text="@string/authing_push_cancel_login"
        android:textAppearance="@android:style/Widget.TextView"
        android:textColor="@color/authing_text_black"
        android:textSize="@dimen/authing_text_large_size" />

    <include layout="@layout/authing_powered_by" />

</LinearLayout>