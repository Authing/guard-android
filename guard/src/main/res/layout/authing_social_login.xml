<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:scrollbars="none"
    android:overScrollMode="never"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:orientation="vertical">

        <cn.authing.guard.TitleLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/authing_title_layout_height"
            android:paddingStart="@dimen/authing_form_start_end_margin"
            android:paddingEnd="@dimen/authing_form_start_end_margin"
            app:showBackIcon="true"
            app:checkNetWork="true"/>

        <cn.authing.guard.AppLogo
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="64dp"
            android:layout_marginStart="@dimen/authing_form_start_end_margin"
            android:layout_marginEnd="@dimen/authing_form_start_end_margin"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="@dimen/authing_form_start_end_margin"
            android:layout_marginEnd="@dimen/authing_form_start_end_margin"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/authing_login"
                android:textStyle="bold"
                android:textColor="@color/authing_text_black"
                android:textSize="@dimen/authing_text_large_size"/>
            <cn.authing.guard.AppName
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/authing_text_black"
                android:textSize="@dimen/authing_text_large_size"/>
        </LinearLayout>

        <cn.authing.guard.ErrorTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:minHeight="@dimen/authing_form_start_end_margin"
            android:layout_marginStart="@dimen/authing_form_start_end_margin"
            android:layout_marginEnd="@dimen/authing_form_start_end_margin"
            android:textSize="@dimen/authing_text_small_size"
            android:gravity="start|center_vertical"/>

        <cn.authing.guard.PrivacyConfirmBox
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginStart="@dimen/authing_form_start_end_margin"
            android:layout_marginEnd="@dimen/authing_form_start_end_margin"
            app:isRememberSate="true"
            app:button="@drawable/authing_checkbox_background"/>

        <cn.authing.guard.social.VerticalSocialLoginListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="@dimen/authing_form_start_end_margin"
            android:layout_marginEnd="@dimen/authing_form_start_end_margin"
            app:showSocialTitle="false"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:minHeight="16dp"
            android:layout_weight="1"/>

        <include layout="@layout/authing_powered_by" />

    </LinearLayout>
</ScrollView>