<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDED"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="92dp"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:text="手机号登录"/>

    <FrameLayout
        android:id="@+id/fl_country_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center_vertical"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/authing_form_start_end_margin"
            android:layout_marginEnd="@dimen/authing_form_start_end_margin">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:text="手机号"/>

            <cn.authing.guard.PhoneNumberEditText
                android:id="@+id/pnet"
                app:clearAllEnabled="false"
                app:dividerPattern="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#BBB"
            android:layout_gravity="bottom"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_verify_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/fl_country_code" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="@dimen/authing_form_start_end_margin"
            android:layout_marginEnd="@dimen/authing_form_start_end_margin">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:text="验证码"/>

            <cn.authing.guard.VerifyCodeEditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:textSize="17sp" />

            <cn.authing.guard.GetVerifyCodeButton
                android:id="@+id/btn_gvc"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                app:background="@drawable/wechat_get_verify_code_button_background"
                app:text="获取验证码"
                app:textSize="12sp"
                app:textColor="@color/wechat_green"
                app:paddingLeft="4dp"
                app:paddingRight="4dp"
                app:paddingTop="4dp"
                app:paddingBottom="4dp"
                app:leftIconDrawable="@drawable/ic_authing_shield_check" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#BBB"
            android:layout_gravity="bottom"/>
    </FrameLayout>

    <cn.authing.guard.ErrorTextView
        android:id="@+id/tv_error"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/authing_form_start_end_margin"
        android:layout_marginEnd="@dimen/authing_form_start_end_margin"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/fl_verify_code"/>

    <cn.authing.guard.LoginButton
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="88dp"
        android:layout_marginStart="108dp"
        android:layout_marginEnd="108dp"
        app:backgroundTint="@null"
        android:background="@drawable/wechat_button_background_normal"
        app:layout_constraintTop_toBottomOf="@id/fl_verify_code"/>
</androidx.constraintlayout.widget.ConstraintLayout>