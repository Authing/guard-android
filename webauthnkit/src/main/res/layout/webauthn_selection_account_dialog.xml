<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/webauthn_dialog_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/webauthn_selection_confirmation_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="选择账号"
        android:textColor="#1D2129"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/webauthn_selection_confirmation_title_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="该应用下有多个账号与设备绑定，请选择一个账号登录。"
        android:textColor="#1D2129"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/webauthn_button_background_gray">
        <Spinner
            android:id="@+id/webauthn_selection_sources"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="16sp"
            android:spinnerMode="dropdown"
            android:overlapAnchor="false"/>
    </LinearLayout>


    <!--    <ScrollView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginTop="24dp"-->
    <!--        android:layout_marginBottom="24dp">-->
    <!--        <LinearLayout-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="wrap_content">-->

    <!--        </LinearLayout>-->
    <!--    </ScrollView>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="0dp">

        <TextView
            android:id="@+id/webauthn_selection_confirmation_cancel_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/webauthn_button_background_gray"
            android:gravity="center"
            android:lineSpacingExtra="6dp"
            android:text="取消"
            android:textColor="#1D2129"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/webauthn_selection_confirmation_ok_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:background="@drawable/webauthn_button_background_blue"
            android:gravity="center"
            android:lineSpacingExtra="6dp"
            android:text="登录"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>
